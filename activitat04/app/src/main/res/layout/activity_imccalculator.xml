<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color"
    android:padding="25dp"
    >

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMC Calculator"
        android:textSize="25dp"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/male"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/famale"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/element_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:src="@drawable/log_male"
                app:tint="@color/male_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "@string/home"
                android:textStyle="bold"
                android:textSize = "25sp"
                android:textColor="@color/white"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/famale"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        app:layout_constraintStart_toEndOf="@id/male"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/element_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:src="@drawable/log_famale"
                app:tint="@color/famale_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Dona"
                android:textStyle="bold"
                android:textSize = "25sp"
                android:textColor="@color/white"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/male"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/element_color"

        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AlÃ§ada"
                android:textStyle="bold"
                android:textSize = "25sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/tvHeight"
                android:text = "153 cm"
                android:textSize = "38sp"
                android:textStyle = "bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnImcApp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:text="Calcular resposta"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="25dp"
        android:background="@color/button_color"

        />


</androidx.constraintlayout.widget.ConstraintLayout>